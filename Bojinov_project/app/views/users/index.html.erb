<p id="notice"><%= notice %></p>

<%= render 'layouts/header' %>

<h1>Users</h1>

<%= link_to 'New User', new_user_path, style: 'margin-top: 2%; display: block' %>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @users %> 
